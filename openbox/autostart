# These things are run when an Openbox X Session is started.
# You may place a similar script in $HOME/.config/openbox/autostart
# to run user-specific things.
#

# If you want to use GNOME config tools...
#
#if test -x /usr/lib/openbox/gnome-settings-daemon >/dev/null; then
#  /usr/lib/openbox/gnome-settings-daemon &
#elif which gnome-settings-daemon >/dev/null; then
#  gnome-settings-daemon &
#fi

# If you want to use XFCE config tools...
#
# xrandr -s 1024x768
sudo -i /usr/local/bin/wallpaper 1> /dev/null 2>&1 &
sudo -i /usr/local/bin/ssh_keygen_rsa 1> /dev/null 2>&1

if [ "$(cat /proc/cmdline |awk -F'/' '{print $2}')" = "live" ]; then
	sed -i '634s/menu.xml/menu_livecd.xml/' ~/.config/openbox/rc.xml
	openbox --reconfigure
	/usr/sbin/install-debian
else
	sudo /usr/local/bin/vnc-server start
	sudo -i /usr/local/bin/syspdv
fi

